<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
    <td>follow <%= user.followings.count %></td>
  </tr>
  <tr>
    <td>followers <%= user.followers.count %></td>
  </tr>
</table>

<% if user != current_user %>
<% if current_user.following?(user) %>
    <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
  <% else %>
    <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
<% end %>
<% end %>


<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>